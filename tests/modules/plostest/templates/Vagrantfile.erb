# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "<%= @vagrant_box %>"

  config.hostmanager.enabled = true
  config.hostmanager.manage_host = false
  config.hostmanager.ignore_private_ip = false
  config.hostmanager.include_offline = true

  config.vm.define "puppet" do |puppet|
    puppet.vm.hostname = "puppet"

    puppet.vm.synced_folder "../../", "/openstack"

    puppet.vm.provider "vmware_fusion" do |v|
        v.vmx["memsize"] =  "1024"
    end
  end

  <% @scenario['nodes'].each_pair do |nodename, nodedata| %>
  config.vm.define "<%= nodename %>" do |<%= nodename %>|
    <%= nodename %>.vm.network :private_network, ip: "<%= @api_address %>", type: "dhcp", auto_config: false
    <%= nodename %>.vm.network :private_network, ip: "<%= @public_address %>", type: "dhcp", auto_config: false
    <%= nodename %>.vm.network :private_network, ip: "<%= @admin_address %>", type: "dhcp", auto_config: false
    <%= nodename %>.vm.network :private_network, ip: "<%= @data_address %>", type: "dhcp", auto_config: false

    <%= nodename %>.vm.hostname = "<%= nodename %>"

    <%= nodename %>.vm.provider "vmware_fusion" do |v|
        v.vmx["memsize"]  = "<%= nodedata['memsize'] %>"
        v.vmx["numvcpus"] = "<%= nodedata['numvcpus'] %>"
    end
  end

  <% end %>
end
